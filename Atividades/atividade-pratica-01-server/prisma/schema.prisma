// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./app-doacao.sqlite"
}

model Estado {
  id         Int      @default(autoincrement()) @id
  nome       String
  sigla      String
  created_at DateTime @default(now())

  cidade Cidade[]

  @@map("estados")
}

model Cidade {
  id        Int      @default(autoincrement()) @id 
  nome      String
  estado_id Int

  pessoa      Pessoa[]
  localColeta LocalColeta[]
  unidade     Unidade[]

  estado Estado @relation(fields: [estado_id], references: [id])
  created_at DateTime @default(now())
  @@map("cidades")
}

model TipoSanguineo {
  id         Int      @default(autoincrement()) @id 
  tipo       String
  fator      String
  created_at DateTime @default(now())

  pessoa Pessoa[]

  @@map("tiposSanguineos")
}

model Pessoa {
  id               Int      @default(autoincrement()) @id 
  nome             String
  rua              String
  numero           String
  complemento      String
  documento        String
  cidade_id        Int
  tipoSanguineo_id Int 

  doacao Doacao[]

  cidade Cidade @relation(fields: [cidade_id], references: [id])
  tipoSanguineo TipoSanguineo @relation(fields: [tipoSanguineo_id], references: [id])
  created_at DateTime @default(now())
  @@map("pessoas")
}

model LocalColeta {
  id               Int      @default(autoincrement()) @id 
  nome             String
  rua              String
  numero           String
  complemento      String
  cidade_id        Int      

  doacao Doacao[]

  cidade Cidade @relation(fields: [cidade_id], references: [id])
  
  created_at DateTime @default(now())
  @@map("locaisColeta")
}

model Doacao {
  id               Int      @default(autoincrement()) @id 
  pessoa_id        Int
  local_id         Int
  data             DateTime

  produto Produto[]

  pessoa Pessoa @relation(fields: [pessoa_id], references: [id])
  local LocalColeta @relation(fields: [local_id], references: [id])
  
  created_at DateTime @default(now())
  @@map("doacoes")
}

model User {
  id          Int      @default(autoincrement()) @id
  nome        String
  email       String  @unique
  password    String
  created_at  DateTime @default(now())
  @@map("users")
}


model Produto {
  id          Int      @default(autoincrement()) @id
  etiqueta    String
  validade    DateTime 
  doacao_id   Int
  
  distribuicoes Distribuicoes[]

  doacao Doacao @relation(fields: [doacao_id], references: [id])

  created_at  DateTime @default(now())
  @@map("produtos")
}

model Unidade {
  id            Int      @default(autoincrement()) @id
  nome          String
  numero        String   
  complemento   String     
  cidade_id     Int
  
  distribuicoes Distribuicoes[]

  cidade Cidade @relation(fields: [cidade_id], references: [id])

  created_at  DateTime @default(now())
  @@map("unidades")
} 

model Distribuicoes {
  id             Int      @default(autoincrement()) @id
  data           DateTime  
  produto_id     Int
  unidade_id     Int

  produto Produto @relation(fields: [produto_id], references: [id])
  unidade Unidade @relation(fields: [unidade_id], references: [id])

  created_at  DateTime @default(now())
  @@map("distribuicoes")
} 
