// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./app-doacao.sqlite"
}

model Estado {
  id         String      @id 
  nome       String
  sigla      String
  created_at DateTime @default(now())

  cidade Cidade[]

  @@map("estados")
}

model Cidade {
  id        String      @id 
  nome      String
  estado_id String

  pessoa Pessoa[]
  localColeta LocalColeta[]

  estado Estado @relation(fields: [estado_id], references: [id])
  created_at DateTime @default(now())
  @@map("cidades")
}

model TipoSanguineo {
  id         String      @id 
  tipo       String
  fator      String
  created_at DateTime @default(now())

  pessoa Pessoa[]

  @@map("tiposSanguineos")
}

model Pessoa {
  id               String      @id 
  nome             String
  rua              String
  numero           String
  complemento      String
  documento        String
  cidade_id        String
  tipoSanguineo_id String 

  doacao Doacao[]

  cidade Cidade @relation(fields: [cidade_id], references: [id])
  tipoSanguineo TipoSanguineo @relation(fields: [tipoSanguineo_id], references: [id])
  created_at DateTime @default(now())
  @@map("pessoas")
}

model LocalColeta {
  id               String      @id 
  nome             String
  rua              String
  numero           String
  complemento      String
  cidade_id        String

  doacao Doacao[]

  cidade Cidade @relation(fields: [cidade_id], references: [id])
  
  created_at DateTime @default(now())
  @@map("locaisColeta")
}

model Doacao {
  id               String      @id 
  pessoa_id        String
  local_id         String
  data             DateTime

  pessoa Pessoa @relation(fields: [pessoa_id], references: [id])
  local LocalColeta @relation(fields: [local_id], references: [id])
  
  created_at DateTime @default(now())
  @@map("doacoes")
}

model User {
  id          String  @id 
  nome        String
  email       String  @unique
  password    String
  created_at  DateTime @default(now())
  @@map("users")
}